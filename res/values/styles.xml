<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="rest_list_text">
        <item name="android:textSize">14.0dip</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/rows_click</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ProgressBar_Green" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progressbar_green</item>
        <item name="android:minHeight">8.0dip</item>
    </style>
    <style name="ProgressBar_Red" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progressbar_red</item>
        <item name="android:minHeight">8.0dip</item>
    </style>

    <style name="MyDialog" parent="@style/base_dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimatio_menubottom</item>
    </style>
    <style name="DialogAnimatio_menubottom">
        <item name="android:windowEnterAnimation">@anim/zoomin</item>
        <item name="android:windowExitAnimation">@anim/zoomoff</item>
    </style>    
    <style name="base_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="menu_dialog" parent="@style/base_dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimatio_menu</item>
    </style>
    <style name="DialogAnimatio_menu">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style> 

</resources>
